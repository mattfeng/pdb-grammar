{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "Protein Data Bank",
  "patterns": [
    {
      "include": "#header"
    },
    {
      "include": "#title"
    },
    {
      "include": "#keywords"
    },
    {
      "include": "#strings"
    },
    {
      "include": "#linecomment"
    }
  ],
  "repository": {
    "header": {
      "begin": "^HEADER\\b",
      "end": "\\n",
      "name": "markup.header",
      "patterns": [
        {
          "match": "(?<=.{62})\\b[0-9A-Z]{1,4}\\b",
          "name": "markup.header.idcode"
        }
      ]
    },
    "title": {
      "patterns": [
        {
          "name": "markup.title",
          "begin": "^TITLE\\b",
          "end": "\\n"
        }
      ]
    },
    "keywords": {
      "patterns": [
        {
          "name": "keyword.control.pdb",
          "match": "^(HETATM|ATOM|TER|CONECT|END|MASTER)\\b"
        },
        {
          "name": "keyword.control.pdb",
          "match": "^(COMPND|SOURCE|KEYWDS|AUTHOR|REVDAT)\\b"
        }
      ]
    },
    "strings": {
      "name": "string.quoted.double.pdb",
      "begin": "\"",
      "end": "\"",
      "patterns": [
        {
          "name": "constant.character.escape.pdb",
          "match": "\\\\."
        }
      ]
    },
    "linecomment": {
      "patterns": [
        {
          "name": "comment",
          "begin": "^(REMARK)\\b (\\b\\d\\d\\d| \\b\\d\\d|  \\b\\d)\\b",
          "end":"\\n",
          "beginCaptures": {
            "1": {
              "name": "comment.line.remark"
            },
            "2": {
              "name": "comment.line.number"
            }
          }
        }
      ]
    }
  },
  "scopeName": "source.pdb"
}